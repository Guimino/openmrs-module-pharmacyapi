<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
		
<hibernate-mapping package="org.openmrs.module.pharmacyapi.api.model" auto-import="false">

	<class name="DrugItem" table="phm_drug_items">
		<cache usage="read-write" />

		<id name="id" type="int" column="drug_item_id">
			<generator class="native">
				<param name="sequence">phm_drug_items_id_seq</param>
			</generator>
		</id>
		
		<discriminator column="drug_item_id" insert="false" />

		<property name="fnmCode" type="java.lang.String" column="fnm_code" not-null="true" unique-key="true"  length="10"/>
		<many-to-one name="drug" class="org.openmrs.Drug" column="drug_id" not-null="true" unique-key="true" />
		<many-to-one name="pharmaceuticalForm" class="org.openmrs.Concept" column="pharmaceutical_form_id" not-null="true" />
		<many-to-one name="therapeuticGroup" class="org.openmrs.Concept" column="therapeutic_group_id" not-null="true" />
		<many-to-one name="therapeuticClass" class="org.openmrs.Concept" column="therapeutic_class_id" not-null="true" />
		
		<!-- Life_cycle_attributes -->
		<many-to-one name="creator" class="org.openmrs.User" not-null="true" column="creator" />
		<many-to-one name="changedBy" class="org.openmrs.User"  column="changed_by" />
		<many-to-one name="retiredBy" class="org.openmrs.User" column="retired_by" />
		
		<property name="dateCreated" type="java.util.Date" column="date_created" not-null="true" length="19" />
		<property name="dateChanged" type="java.util.Date" column="date_changed" length="19" />
		<property name="dateRetired" type="java.util.Date" column="date_retired" length="19" />
		<property name="retireReason" type="java.lang.String" column="retire_reason" length="255" />
		<property name="retired" type="boolean" column="retired" length="1" not-null="true" />
		<property name="uuid" type="java.lang.String" column="uuid" length="38" unique="true" />
	</class>
	
	<class name="DrugRegime" table="phm_drug_regime">
		<cache usage="read-write" />

		<id name="id" type="int" column="drug_regime_id">
			<generator class="native">
				<param name="sequence">phm_drug_regime_id_seq</param>
			</generator>
		</id>
		
		<discriminator column="drug_regime_id" insert="false" />
		<many-to-one name="drugItem" class="org.openmrs.module.pharmacyapi.api.model.DrugItem" column="drug_item_id" not-null="true" />
		<many-to-one name="regime" class="org.openmrs.Drug" column="regime_id" not-null="true"  />

		<!-- Life_cycle_attributes -->
		<many-to-one name="creator" class="org.openmrs.User" not-null="true" column="creator" />
		<many-to-one name="changedBy" class="org.openmrs.User"  column="changed_by" />
		<many-to-one name="retiredBy" class="org.openmrs.User" column="retired_by" />
		
		<property name="dateCreated" type="java.util.Date" column="date_created" not-null="true" length="19" />
		<property name="dateChanged" type="java.util.Date" column="date_changed" length="19" />
		<property name="dateRetired" type="java.util.Date" column="date_retired" length="19" />
		<property name="retireReason" type="java.lang.String" column="retire_reason" length="255" />
		<property name="retired" type="boolean" column="retired" length="1" not-null="true" />
		<property name="uuid" type="java.lang.String" column="uuid" length="38" unique="true" />
	</class>
	
	

</hibernate-mapping>